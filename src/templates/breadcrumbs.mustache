                <a href="{{link}}" itemid="{{link}}" itemprop="item" itemscope itemtype="http://schema.org/Thing">
                    <span itemprop="name">{{label}}</span>
                </a>
                <meta itemprop="position" content="{{type}}" />
            </span>
